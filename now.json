{
  "version": 2,
  "env": {
    "POSTGRES_URL": "@postgres_url",
    "NODE_ENV": "production"
  },
  "build": {
    "env": {
      "POSTGRES_URL": "@postgres_url",
      "NODE_ENV": "production"
    }
  },
  "builds": [
    {
      "src": "web/next.config.js",
      "use": "@now/next"
    },
    {
      "src": "api/src/index.ts",
      "use": "@now/node",
      "config": { "maxLambdaSize": "20mb" }
    }
  ],
  "routes": [
    { "src": "/api", "dest": "/api/src/index.ts" },
    {
      "src": "/(.*)",
      "dest": "/web/$1",
      "headers": {
        "x-request-path": "$1"
      }
    }
  ]
}

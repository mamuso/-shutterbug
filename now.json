{
  "version": 2,
  "build": {
    "env": {
      "MYSQL_URL": "@mysql_url",
      "BACKEND_URL": "@backend_url",
      "FRONTEND_URL": "@frontend_url"
    }
  },
  "env": {
    "MYSQL_URL": "@mysql_url",
    "BACKEND_URL": "@backend_url",
    "FRONTEND_URL": "@frontend_url"
  },
  "builds": [
    {
      "src": "web/next.config.js",
      "use": "@now/next"
    },
    {
      "src": "api/src/index.ts",
      "use": "@now/node",
      "config": { "maxLambdaSize": "20mb" }
    }
  ],
  "routes": [
    { "src": "/api", "dest": "/api/src/index.ts" },
    {
      "src": "/(.*)",
      "dest": "/web/$1",
      "headers": {
        "x-request-path": "$1"
      }
    }
  ]
}

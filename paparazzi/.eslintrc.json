{
  "env": {
    "node": true,
    "es6": true
  },
  "extends": [
    "plugin:github/recommended",
    "plugin:github/typescript"
  ],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": 9,
    "sourceType": "module",
    "project": "./tsconfig.json"
  },
  "rules": {
    "eslint-comments/no-use": "off",
    "import/no-namespace": "off",
    "no-unused-vars": "off",
    "camelcase": "off",
    "semi": "off"
  }
}